<script>
  document.addEventListener('DOMContentLoaded', function() {
  const links = document.querySelectorAll('.page-link');

  links.forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const pageNumber = this.getAttribute('data-page');
      loadPageContent(pageNumber);
    });
  });
});

function loadPageContent(pageNumber) {
  // Here you should define how to fetch and display the products
  // For demonstration, let's assume you have a function that fetches product data
  fetch(`/api/products?page=${pageNumber}`)
    .then(response => response.json())
    .then(data => {
      const productContainer = document.querySelector('.container > .row');
      productContainer.innerHTML = ''; // Clear existing products
      data.products.forEach(product => {
        // Create and append product cards here
        // For brevity, I'm not including the detailed HTML structure
        const productCard = `<div class="col-md-4 col-lg-3 col-sm-2 col-6">...</div>`;
        productContainer.innerHTML += productCard;
      });
    })
    .catch(error => {
      console.error('Error loading the page content: ', error);
    });
}

